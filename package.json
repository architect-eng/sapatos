{
  "name": "@architect-eng/sapatos",
  "version": "0.5.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/architect-eng/sapatos"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "bin": {
    "sapatos": "dist/generate/cli.js"
  },
  "scripts": {
    "lint": "eslint --max-warnings 0 src/**/*.ts",
    "typecheck": "tsc --noEmit -p tsconfig.build.json && tsc --noEmit -p tsconfig.test.json",
    "build": "npx tsc --project tsconfig.build.json && npx gen-esm-wrapper db db.mjs && npx gen-esm-wrapper generate generate.mjs",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "integration-tests": "vitest run --config vitest.integration.config.ts",
    "integration-tests:watch": "vitest watch --config vitest.integration.config.ts",
    "version": "npm run lint && npm run build",
    "postversion": "git push && git push --tags && npm publish",
    "postinstall": "node -e \"console.warn('>>> \\u001b[1;33mSapatos was installed or upgraded. Please (re-)run \\u001b[1;32mnpx sapatos\\u001b[1;33m.\\u001b[0m <<<\\u000a')\"",
    "prepare": "husky"
  },
  "files": [
    "dist/db",
    "db.js",
    "db.d.ts",
    "db.mjs",
    "dist/generate",
    "generate.js",
    "generate.d.ts",
    "generate.mjs"
  ],
  "exports": {
    "./db": {
      "types": "./db.d.ts",
      "require": "./db.js",
      "import": "./db.mjs"
    },
    "./generate": {
      "types": "./generate.d.ts",
      "require": "./generate.js",
      "import": "./generate.mjs"
    }
  },
  "keywords": [
    "postgres",
    "typescript",
    "orm",
    "sql"
  ],
  "peerDependencies": {
    "@types/pg": ">=7.14.3",
    "pg": ">=7.18.2",
    "typescript": ">=5.0"
  },
  "overrides": {
    "eslint": "^9.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.17.0",
    "@testcontainers/postgresql": "^11.8.1",
    "@types/pg": "^8.6.5",
    "@vitest/ui": "^4.0.13",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.3.0",
    "gen-esm-wrapper": "^1.1.3",
    "globals": "^15.13.0",
    "husky": "^9.1.7",
    "pg": "^8.7.3",
    "testcontainers": "^11.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^4.0.13"
  },
  "dependencies": {
    "json-custom-numbers": "^3.1.1"
  }
}
